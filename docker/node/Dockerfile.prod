FROM golang:1.22 as builder

WORKDIR /app

COPY go.mod go.sum ./

RUN go mod download

COPY cmd/node/node.go cmd/node/
COPY internal/ internal/

RUN go build -o /app cmd/node/node.go


FROM golang:1.22

RUN apt-get update && apt-get install -y dnsutils

COPY --from=builder /app/node /node

CMD ["/node", "-port", "8080"]
